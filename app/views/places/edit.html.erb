<div class="booyah-box col-10 offset-1">
  <h1>Edit this place</h1>
    <%= simple_form_for @place do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <br>
    <%= f.submit 'Cancel', class: 'btn btn-primary' %>
    <%= f.submit 'Save changes', class: 'btn btn-primary' %>
  
    <% end %>
    </div>

