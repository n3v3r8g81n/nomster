<div class="booyah-box col-10 offset-1">
  <h1><%= @place.name %></h1>
  <i><%= @place.address %></i>
  <br>
  <p><%= @place.description %></p>

  <% if @place.latitude.present? && @place.longitude.present? %>

  <script>
      function initMap() {
        var myLatLng = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %> };
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 12,
          center: myLatLng
        });

        var marker = new google.maps.Marker({
          position: myLatLng,
          map: map,
          title: 'Hello World!'
        });
      }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCFUG42F13qCrvRmrgxbMMN-iMr-4Ho6wI&callback=initMap">
    </script>
    <div id="map"></div>
  <% end %>
</div>
<br>

  <div class="float-right">
    <!-- added from lesson 25 -->
    <% if current_user && current_user == @place.user %>
        <!-- 2019.08.07 added for lesson 39 -->
        <%= link_to "Add a photo", place_photos_path(@place), class: 'btn btn-warning' %>
        <%= link_to "Edit this place", edit_place_path(@place), class: 'btn btn-primary' %>
        <%= link_to "Delete this place", place_path(@place), method: :delete, data: {confirm: 'You requested to delete this place. Please confirm.'}, class: 'btn btn-danger' %>
    <% end %>
    <p></p>
  </div>

  <div class="float-left">
    <!-- added from lesson 25 -->
    <% if current_user %>
      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal">
      Add a comment!
      </button>
    <% end %>
  </div>

<div class="clear"></div>

<!-- list of comments -->
<div class="col-10 offset-1">
<h2 class="float-left">Comments</h2>
</div>
<div class="clear"></div>

<div class="booyah-box col-10 offset-1">
<div class="row">
  <% @place.comments.each do |comment| %>
  <div class="col-12 col-sm-6">
    <blockquote>
      <% if comment.humanized_rating.present? %>
       <b><%= comment.rating %></b> -
       <% end %>
        <%= comment.message %>
        <br>
        <small><%= comment.user.email %></small>
      </blockquote>
    </div>
    <% end %>
     </div>
   </div>
 
<div class="clear"></div>

<!-- Comment Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Add a comment!</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= simple_form_for @comment, url: place_comments_path(@place) do |f| %>
        <div class="modal-body">
          <%= f.input :message %>
          <%= f.input :rating, as: :select, collection: Comment::RATINGS %>
        </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Add comment", class: 'btn btn-success' %>
      </div>
        <% end %>
      </div>
    </div>
  </div>

